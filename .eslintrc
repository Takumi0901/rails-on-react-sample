{
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true
  },
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "parserOptions": {
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "jsx": true
    },
    "sourceType": "module"
  },
  "plugins": [
    "react",
    "prettier"
  ],
  "rules": {
    "indent": [
      2,
      2,
      {"SwitchCase": 1}
    ],
    "linebreak-style": [
      2,
      "unix"
    ],
    "semi": [
      2,
      "never"
    ],
    "no-console": 0,
    "comma-dangle": [2, "never"],
    "react/jsx-space-before-closing": [2, "always"],
    "prettier/prettier": ["error", {
      "jsxBracketSameLine": false,
      "tabWidth":  2,
      "trailingComma": "none",
      "semi":false,
      "singleQuote": true
    }]
  },
  "globals": {
    "AjaxZip3": true
  }
}